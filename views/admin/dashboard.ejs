<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="add-post"
        style=" background-color: #00ADB5; color: #121212; border: none; border-radius: 8px; padding: 8px;">Add New</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post=> { %>
        <li>
            <a href="/post/<%= post._id %>">

                <%= post.title %> &nearr;

            </a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn-delete btn">
                </form>
            </div>
        </li>
        <% }) %>

            <% if (nextPage !==null) { %>
                <a href="dashboard/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts </a>
                <% } %>
</ul>